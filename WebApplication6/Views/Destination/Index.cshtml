
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<button class="btn btn-sm btn-primary m-2" id="btnAddDestination">Add Destination</button>

<table class="table table-light">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Country</th>
            <th>Average Rating</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>

</table>

<div class="madal fade modal" id="DestinationMadal">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 class="text-info modal-title" id="destinationHeading">Add Destination</h1>
            <button class="close text-danger" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form method="post">
                <div class="form-group" id="desId">
                 <label>Id</label>
                 <input type="text" class="form-control" id="DestinationId" disabled="disabled" />
                </div>

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" placeholder="Enter Name" class="form-control" id="DestinationName" autocomplete="off" />
                </div>
                    <div class="form-group">
                        <label>Country</label>
                        <input type="text" placeholder="Enter Country" class="form-control" id="Country" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Average Rating</label>
                        <input type="text" placeholder="Enter Rating" class="form-control" id="AverageRating" autocomplete="off" />
                    </div>
            </form>
        </div>

        <div class="modal-footer">
            <button class="btn btn-primary" onclick="AddDestination();" id="AddDestination">Save</button>
            <button class="btn btn-warning" onclick="UpdateDestination();"
            style="display:none" id="btnUpdate">Update</button>
            <btn class="btn btn-danger btn-default" data-dismiss="modal">Close</btn>
        </div>
    </div>
</div>
</div>

 <div>
     <input type="hidden" id="urlDestinationData" value="@Url.Action("DestinationList", "Destination")" />

 </div>



<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/custom.js"></script>